<h3>All Companies</h3>

<ul>
  <% @companies.each do |company| %>
  <li class=company_<%= company.id %>>
    <strong> <%= link_to company.name, company_path(company) %> </strong> <br>
    <%= link_to "Create New Job", new_company_job_path(company) %>
    <%= link_to "Edit", edit_company_path(company) %>
    <%= link_to "Delete", company_path(company), method: "delete" %><br><br><br>
  </li>
  <% end %>
</ul>
